@using option4mvc.Models.CartModels


@{
    ViewData["Title"] = "Index";
}
<div>
    <h1>Shopping Cart</h1>
    @if (Model.Count == 0)
    {
        <p>No items currently!</p>
    } else
    {
        <table>
            <tr>
                <th>Cart ID</th>
                <th>Cart Detail ID</th>
            </tr>
            @foreach (var cart in Model)
            {
                <tr>
                    <td>@Model.CartId</td>
                </tr>
            }
        </table>
    }
</div>



 